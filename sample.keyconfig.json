// Exiting
{ "key": "ctrl+x ctrl-c",         "command": "workbench.action.closeAllEditors"},

// Moving Point
{ "key": "ctrl+f",                "command": "cursorRight",
                                     "when": "editorTextFocus"},
{ "key": "right",                 "command": "cursorRight",
                                     "when": "editorTextFocus"},
{ "key": "ctrl+b",                "command": "cursorLeft",
                                     "when": "editorTextFocus"},
{ "key": "left",                  "command": "cursorLeft",
                                     "when": "editorTextFocus"},
{ "key": "ctrl+n",                "command": "cursorDown",
                                     "when": "editorTextFocus"},
{ "key": "down",                  "command": "cursorDown",
                                     "when": "editorTextFocus" },
{ "key": "ctrl+p",                "command": "cursorUp",
                                     "when": "editorTextFocus" },
{ "key": "up",                    "command": "cursorUp",
                                     "when": "editorTextFocus" },
{ "key": "ctrl+a",                "command": "cursorHome",
                                     "when": "editorTextFocus" },
{ "key": "home",                  "command": "cursorHome",
                                     "when": "editorTextFocus" },
{ "key": "ctrl+e",                "command": "cursorEnd",
                                     "when": "editorTextFocus" },
{ "key": "end",                   "command": "cursorEnd",
                                     "when": "editorTextFocus" },
{ "key": "meta+f",                "command": "cursorWordRight",
                                     "when": "editorTextFocus" },
{ "key": "ctrl+right",            "command": "cursorWordRight",
                                     "when": "editorTextFocus" },
{ "key": "meta+b",                "command": "cursorWordLeft",
                                     "when": "editorTextFocus" },
{ "key": "ctrl+left",             "command": "cursorWordLeft",
                                     "when": "editorTextFocus" },
{ "key": "meta+<",                "command": "cursorTop",
                                     "when": "editorTextFocus" },
{ "key": "meta+>",                "command": "cursorBottom",
                                     "when": "editorTextFocus" },
{ "key": "ctrl+left",             "command": "cursorWordLeft",
                                     "when": "editorTextFocus" },
{ "key": "ctrl+v",                "command": "cursorPageDown",
                                     "when": "editorTextFocus"},
{ "key": "escape v",              "command": "cursorPageUp",
                                     "when": "editorTextFocus"},

// Erasing Key
{ "key": "backspace",             "command": "deleteLeft",
                                     "when": "editorTextFocus && !editorReadonly" },
{ "key": "delete",                "command": "deleteRight",
                                     "when": "editorTextFocus && !editorReadonly" },

// Undoing Changes
{ "key": "ctrl+/",                "command": "undo",
                                     "when": "editorTextFocus" },
{ "key": "ctrl+x u",                "command": "undo",
                                     "when": "editorTextFocus" },
{ "key": "ctrl+_",                "command": "undo",
                                     "when": "editorTextFocus" },

// Setting the Mark
{ "key": "ctrl+space",            "command": "emacs.set-mark-command",
                                     "when": "editorTextFocus" },

// Visiting Files
{ "key": "ctrl+x ctrl+f",         "command": "workbench.action.files.openFileFolder",
                                     "when": "editorTextFocus"},


{ "key": "ctrl+x ctrl+k",        "command": "workbench.action.closeActiveEditor",
                                     "when": "editorTextFocus"},
